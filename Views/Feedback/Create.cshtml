@model OnlineAssessment.Web.Models.Feedback

@{
    ViewData["Title"] = "Submit Feedback";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">üìù Submit Your Feedback</h3>
                </div>
                <div class="card-body">

                    @* Success/Error Messages *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="InternName" class="form-control" placeholder="Enter your name" />
                            <label asp-for="InternName">Intern Name</label>
                            <span asp-validation-for="InternName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <label asp-for="Email">Email ID</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Domain" class="form-control" placeholder="Enter your domain" />
                            <label asp-for="Domain">Domain</label>
                            <span asp-validation-for="Domain" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Date" class="form-control" type="date" />
                            <label asp-for="Date">Date</label>
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TrainingRating" class="form-label">Training Session Rating (1 to 5)</label>
                            <input asp-for="TrainingRating" type="range" min="1" max="5" class="form-range" />
                            <span asp-validation-for="TrainingRating" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TrainingRelevance" class="form-label">Training Relevance to Learning Needs (1 to 5)</label>
                            <input asp-for="TrainingRelevance" type="range" min="1" max="5" class="form-range" />
                            <span asp-validation-for="TrainingRelevance" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MentorRating" class="form-label">Mentor Rating (1 to 5)</label>
                            <input asp-for="MentorRating" type="range" min="1" max="5" class="form-range" />
                            <span asp-validation-for="MentorRating" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="LikedMost" class="form-control" style="height: 100px;" placeholder="What did you like the most?"></textarea>
                            <label asp-for="LikedMost">What did you like most about the training?</label>
                            <span asp-validation-for="LikedMost" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="ImprovementSuggestions" class="form-control" style="height: 100px;" placeholder="What could be improved?"></textarea>
                            <label asp-for="ImprovementSuggestions">What could be improved in upcoming sessions?</label>
                            <span asp-validation-for="ImprovementSuggestions" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="MentorSuggestions" class="form-control" style="height: 100px;" placeholder="Any suggestions for the mentor?"></textarea>
                            <label asp-for="MentorSuggestions">Any suggestions for your mentor?</label>
                            <span asp-validation-for="MentorSuggestions" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">üì§ Submit Feedback</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

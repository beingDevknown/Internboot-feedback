@model List<Organization>
@{
    ViewData["Title"] = "Organizations";
    Layout = "_SuperAdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Organizations</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/SuperAdmin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Organizations</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Organizations
                </div>
                <a href="/SuperAdmin/AddOrganization" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add Organization
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact Person</th>
                        <th>Phone</th>
                        <th>Created At</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var org in Model)
                    {
                        <tr>
                            <td>@org.Name</td>
                            <td>@org.Email</td>
                            <td>@org.ContactPerson</td>
                            <td>@org.PhoneNumber</td>
                            <td>@org.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>@(org.LastLoginAt.HasValue ? org.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm") : "Never")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/SuperAdmin/OrganizationDetails/@org.SapId" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@org.SapId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@org.SapId" tabindex="-1" aria-labelledby="deleteModalLabel-@org.SapId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel-@org.SapId">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete the organization <strong>@org.Name</strong>? This action cannot be undone.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form action="/SuperAdmin/DeleteOrganization/@org.SapId" method="post">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

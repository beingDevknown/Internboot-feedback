@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        Access Denied
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>@ViewBag.Message</h5>
                        <p>You don't have the required permissions to access this resource.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Authentication Status:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Authenticated:</strong> @ViewBag.IsAuthenticated</li>
                                <li><strong>User Name:</strong> @ViewBag.UserName</li>
                                <li><strong>Role:</strong> @ViewBag.UserRole</li>
                                <li><strong>User ID:</strong> @ViewBag.UserId</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>What you can do:</h6>
                            <ul>
                                @if (!ViewBag.IsAuthenticated)
                                {
                                    <li><a href="/Auth/Login" class="btn btn-primary btn-sm">Login as User</a></li>
                                    <li><a href="/Auth/OrganizationLogin" class="btn btn-info btn-sm">Login as Organization</a></li>
                                    <li><a href="/SuperAdmin/Login" class="btn btn-warning btn-sm">Login as Admin</a></li>
                                }
                                else
                                {
                                    <li><a href="/Auth/Logout" class="btn btn-secondary btn-sm">Logout</a></li>
                                    <li><a href="/Test" class="btn btn-primary btn-sm">Go to Tests</a></li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h6>Debug Information:</h6>
                        <p><small class="text-muted">If you believe this is an error, please contact support with the following information:</small></p>
                        <div class="bg-light p-3 rounded">
                            <small>
                                <strong>Timestamp:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")<br>
                                <strong>Requested URL:</strong> @Context.Request.Path<br>
                                <strong>User Agent:</strong> @Context.Request.Headers["User-Agent"]
                            </small>
                        </div>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .btn {
        margin: 2px;
    }
    
    .bg-light {
        font-family: monospace;
    }
</style>

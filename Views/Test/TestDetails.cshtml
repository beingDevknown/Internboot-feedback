@model OnlineAssessment.Web.Models.Test
@{
    ViewData["Title"] = "Test Details";
}

@section Styles {
    <style>
        .test-details-container {
            max-width: 800px;
            margin: 1rem auto;
            padding: 0 1rem;
            min-height: calc(100vh - 2rem);
            display: flex;
            flex-direction: column;
        }

        .test-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .test-header h2 {
            color: #1e293b;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .test-header p {
            color: #64748b;
            font-size: 1rem;
            max-width: 600px;
            margin: 0 auto;
        }

        .test-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
            padding: 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid rgba(226, 232, 240, 0.5);
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .test-card h3 {
            color: #1e293b;
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .test-card h3 i {
            color: #3b82f6;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .info-card {
            background: #f8fafc;
            border-radius: 0.75rem;
            padding: 1rem;
            border: 1px solid #e2e8f0;
        }

        .info-card h4 {
            color: #1e293b;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-card h4 i {
            color: #3b82f6;
        }

        .info-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .info-list li {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            color: #64748b;
            font-size: 0.875rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .info-list li:last-child {
            border-bottom: none;
        }

        .info-list li i {
            color: #3b82f6;
            font-size: 1rem;
        }

        .test-type-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 0.5rem;
            font-weight: 500;
            font-size: 0.75rem;
            background: #e0f2fe;
            color: #0369a1;
        }

        .test-type-badge i {
            font-size: 0.875rem;
        }

        .warning-card {
            background: #fff7ed;
            border: 1px solid #fed7aa;
            border-radius: 0.75rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .warning-card h4 {
            color: #c2410c;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .warning-card h4 i {
            color: #c2410c;
        }

        .warning-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .warning-list li {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            color: #7c2d12;
            font-size: 0.875rem;
            border-bottom: 1px solid #fed7aa;
        }

        .warning-list li:last-child {
            border-bottom: none;
        }

        .warning-list li i {
            color: #c2410c;
            font-size: 1rem;
        }

        .start-button {
            width: 100%;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            border: none;
            border-radius: 0.75rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 4px 6px -1px rgb(59 130 246 / 0.2);
            text-decoration: none;
            font-size: 0.875rem;
            margin-top: auto;
        }

        .start-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 8px -1px rgb(59 130 246 / 0.3);
        }

        @@media (max-width: 768px) {
            .test-details-container {
                margin: 0.5rem auto;
            }

            .test-header h2 {
                font-size: 1.75rem;
            }

            .test-header p {
                font-size: 0.875rem;
            }

            .test-card {
                padding: 1rem;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="test-details-container">
    <div class="test-header">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
    </div>

    <div class="test-card">
        <h3>
            <i class="fas fa-info-circle"></i>
            Test Information
        </h3>

        <div class="info-grid">
            <div class="info-card">
                <h4>
                    <i class="fas fa-clock"></i>
                    Test Details
                </h4>
                <ul class="info-list">
                    <li>
                        <i class="fas fa-hourglass-half"></i>
                        Duration: @Model.DurationMinutes minutes
                    </li>
                    <li>
                        <i class="fas fa-question-circle"></i>
                        Total Questions: @Model.Questions.Count
                    </li>
                    <li>
                        <i class="fas fa-tag"></i>
                        Type:
                        <span class="test-type-badge">
                            <i class="fas fa-@(Model.Type == TestType.MultipleChoice ? "list-ul" : "code")"></i>
                            @(Model.Type == TestType.MultipleChoice ? "Multiple Choice" : "Coding")
                        </span>
                    </li>
                    @if (Model.Domain != null)
                    {
                        <li>
                            <i class="fas fa-folder"></i>
                            Domain: @Model.Domain
                        </li>
                    }
                    <li>
                        <i class="fas fa-users"></i>
                        Capacity: @Model.CurrentUserCount/@Model.MaxUsersPerSlot users
                    </li>
                    @if (Model.ScheduledStartTime.HasValue && Model.ScheduledEndTime.HasValue)
                    {
                        <li>
                            <i class="fas fa-clock"></i>
                            Time: @Model.ScheduledStartTime.Value.ToString("hh:mm tt") - @Model.ScheduledEndTime.Value.ToString("hh:mm tt")
                        </li>
                    }
                </ul>
            </div>

            <div class="info-card">
                <h4>
                    <i class="fas fa-exclamation-circle"></i>
                    Important Notes
                </h4>
                <ul class="info-list">
                    <li>
                        <i class="fas fa-clock"></i>
                        The test has a time limit of @Model.DurationMinutes minutes
                    </li>
                    <li>
                        <i class="fas fa-exclamation-triangle"></i>
                        Do not refresh or close the browser during the test
                    </li>
                    <li>
                        <i class="fas fa-wifi"></i>
                        Ensure you have a stable internet connection
                    </li>
                </ul>
            </div>
        </div>

        <div class="warning-card">
            <h4>
                <i class="fas fa-exclamation-triangle"></i>
                Important Warning
            </h4>
            <ul class="warning-list">
                <li>
                    <i class="fas fa-clock"></i>
                    Once you start the test, the timer will begin and cannot be paused
                </li>
                <li>
                    <i class="fas fa-save"></i>
                    Your progress will be automatically saved
                </li>
                <li>
                    <i class="fas fa-lock"></i>
                    You cannot return to previous questions after submission
                </li>
            </ul>
        </div>

        @if (Model.IsScheduleRestricted && Model.ScheduledStartTime.HasValue && Model.ScheduledEndTime.HasValue)
        {
            <div class="info-card mt-3">
                <h4>
                    <i class="fas fa-calendar-alt"></i>
                    Scheduled Time
                </h4>
                <ul class="info-list">
                    <li>
                        <i class="fas fa-play"></i>
                        Start: @Model.ScheduledStartTime.Value.ToString("yyyy-MM-dd HH:mm:ss") IST
                    </li>
                    <li>
                        <i class="fas fa-stop"></i>
                        End: @Model.ScheduledEndTime.Value.ToString("yyyy-MM-dd HH:mm:ss") IST
                    </li>
                    <li>
                        <i class="fas fa-info-circle"></i>
                        Current Time: @OnlineAssessment.Web.Utilities.TimeZoneHelper.GetCurrentIstTime().ToString("yyyy-MM-dd HH:mm:ss") IST
                    </li>
                </ul>
            </div>
        }

        <a href="/Test/Instructions/@Model.Id" class="start-button">
            <i class="fas fa-play"></i>
            Start Test
        </a>
    </div>
</div>